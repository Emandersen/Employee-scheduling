extends layout

block content
    h1 Profile

    style.
        .profile-form {
            display: flex;
            flex-direction: column;
            max-width: 500px;
            margin: auto;
        }
        .profile-form label {
            font-weight: bold;
            margin-top: 10px;
        }
        .profile-form input, .profile-form select {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .profile-form button {
            cursor: pointer;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            color: white;
            background-color: #007BFF;
        }
        .profile-form button:hover {
            background-color: #0056b3;
        }

    form.profile-form(action="/update-profile" method="POST")
        label(for="firstName") First Name
        input#firstName(type="text" name="firstName" value=user.firstName)

        label(for="lastName") Last Name
        input#lastName(type="text" name="lastName" value=user.lastName)

        label(for="email") Email
        input#email(type="email" name="email" value=user.email readonly)

        label(for="role") Role
        select#role(type="text" name="role" value=user.role)
                        option(value='Nurse Practitioner') Nurse Practitioner
                        option(value='Nurse Anesthetist') Nurse Anesthetist
                        option(value='Nurse Educator') Nurse Educator
                        option(value='Nurse Manager') Nurse Manager
                        option(value='Travel Nurse') Travel Nurse
                        option(value='Pediatric Nurse') Pediatric Nurse
                        option(value='Oncology Nurse') Oncology Nurse
                        option(value='Orthopedic Nurse') Orthopedic Nurse
                        option(value='Cardiac Nurse') Cardiac Nurse
                        option(value='Geriatric Nurse') Geriatric Nurse
                        option(value='Intensive Care Nurse') Intensive Care Nurse
                        option(value='Emergency Nurse') Emergency Nurse
                        option(value='Labor and Delivery Nurse') Labor and Delivery Nurse

        label(for="department") Department
        select#department(type="text" name="department" value=user.department)
                        option(value='Cardiology') Cardiology
                        option(value='Neurology') Neurology
                        option(value='Orthopedics') Orthopedics
                        option(value='Pediatrics') Pediatrics
                        option(value='Radiology') Radiology
                        option(value='Surgery') Surgery
                        option(value='Dermatology') Dermatology
                        option(value='Gastroenterology') Gastroenterology
                        option(value='Endocrinology') Endocrinology
                        option(value='Oncology') Oncology
                        option(value='Ophthalmology') Ophthalmology
                        option(value='Psychiatry') Psychiatry
                        option(value='Anesthesiology') Anesthesiology
                        option(value='Gynecology') Gynecology
                        option(value='Geriatrics') Geriatrics
                        option(value='Immunology') Immunology

        label(for="preferences") Current Preferences
        ul
            each preference in user.preferences
                li= preference

        label(for="addPreference") Add Preference
        select#addPreference(name="addPreference")
            each preference in availablePreferences
                option(value=preference)= preference

        button(type="submit") Update Profile