extends layout

block content
    h1 Profile

    style.
        body {
            font-family: Arial, sans-serif;
        }
        .profile-form {
            display: flex;
            flex-direction: column;
            max-width: 500px;
            margin: auto;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .profile-form h1 {
            text-align: center;
            color: #007BFF;
        }
        .profile-form .input-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .profile-form .input-group label {
            flex: 1;
            margin-right: 10px;
        }
        .profile-form .input-group input {
            flex: 2;
        }
        .profile-form label {
            font-weight: bold;
            margin-top: 20px;
        }
        .profile-form input, .profile-form select {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .profile-form button {
            cursor: pointer;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            color: white;
            background-color: #007BFF;
            margin-top: 20px;
        }
        .profile-form button:hover {
            background-color: #0056b3;
        }
        .profile-form p {
            margin-bottom: 0;
        }
        .profile-form ul {
            padding-left: 0;
        }
        .profile-form ul li {
            list-style-type: none;
            margin-bottom: 10px;
        }

    div.profile-form
        h1= user.firstName + ' ' + user.lastName

        p
            strong Email: 
            span= user.email

        p
            strong Role: 
            span= user.role


        p
            strong Department: 
            span= user.department

    div.profile-form
        h1 Change Password 
        form(action="/profile/change-password" method="POST")
            .input-group
                label(for="currentPassword") Current Password
                input#currentPassword(name="currentPassword" type="password" required="required")
            .input-group
                label(for="newPassword") New Password
                input#newPassword(name="newPassword" type="password" required="required")
            .input-group
                label(for="confirmPassword") Confirm Password
                input#confirmPassword(name="confirmPassword" type="password" required="required")
            button(type="submit") Change Password

    div.profile-form
        h1 Preferences
        form(action="/profile/add-preferences" method="POST")
            label(for="addPreference") Add Preference
            select#addPreference(name="addPreference")
                each preference in availablePreferences
                    option(value=preference)= preference
            button(type="submit") Add
        p
            strong Current Preferences: 
            ul
                each preference in user.preferences
                    li
                        span= preference
                        form(action=`/profile/remove-preference?preference=${preference}` method="POST")
                            button(type="submit") Remove