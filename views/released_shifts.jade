extends layout

block content
    style.
        .container {
            font-size: 0.8em;
        }
        h1 {
            font-size: 1.2em;
        }
        h2 {
            font-size: 2em;
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .released-shift {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            padding: 5px;
            margin-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        tr {
            border-bottom: 1px solid #ccc;
            height: 30px;
        }
        .shift-box {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

    div.container
        div.released-shift
            h2 Released shifts
            each shift in releasedShifts
                    table
                        tbody
                            tr
                                td Date: #{moment(shift.date).format('dddd D. MMMM YYYY')}
                                td Role: #{shift.role}
                                td Department: #{shift.department}
                                td Location: #{shift.location}
                                td Hours: #{shift.startTime} - #{shift.endTime} (#{shift.workHours})
                                td
                                    form.action-buttons(method='post', action=`/claim-shift/${shift.id}`)
                                        button.btn(type='submit') Claim Shift