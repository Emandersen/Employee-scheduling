extends layout

block content
    style.
        .container {
            font-size: 0.8em;
        }
        h1 {
            font-size: 1.2em;
        }
        h2 {
            font-size: 2em;
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .released-shift {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            padding: 5px;
            margin-bottom: 10px;
        }
        p {
            font-size: 1.2em;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: separate; // Change this to 'separate' to allow cell spacing
            border-spacing: 10px 0; // Add horizontal spacing between cells
        }
        td {
            text-align: left;
            padding: 0;
            width: 16.66%;
        }
        tr {
            height: 30px;
        }
        .shift-box {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

    div.container
        div.released-shift
            h2 Released shifts
            p Released shifts are shifts that are currently available for employees to claim. Once a shift is claimed, it will be removed from this list.
            each shift in releasedShifts
                div.shift-box
                    table
                        tbody
                            tr
                                td #{moment(shift.date).format('dddd D. MMMM YYYY')}
                                td Role: #{shift.role}
                                td Department: #{shift.department}
                                td Location: #{shift.location}
                                td Hours: #{shift.startTime} - #{shift.endTime} (#{shift.workHours})
                                td
                                    form.action-buttons(method='post', action=`/toggle-shift/${shift.id}`)
                                        button.btn(type='submit') Claim Shift